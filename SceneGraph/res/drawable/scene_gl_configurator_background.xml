<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item 
        android:top="0dp" 
        android:left="0dp"
        android:bottom="0dp" 
        android:right="@dimen/offset_right"
     	>
        <shape android:shape="rectangle">
            <size android:width="30dp"
                android:height="30dp"/>
            <solid android:color="@color/iglou_gray"/>
        </shape>
    </item>

  <item 
        android:top="0dp" 
        android:left="0dp"
        android:bottom="@dimen/offset_bottom" 
        android:right="0dp"
     	>
        <shape android:shape="rectangle">
            <size android:width="30dp"
                android:height="30dp"/>
            <solid android:color="@color/iglou_gray"/>
        </shape>
    </item>
    
    <item 
        android:top="@dimen/offset_top" 
        android:left="0dp"
        android:bottom="0dp" 
        android:right="0dp"
     	>
        <shape android:shape="rectangle">
            <size android:width="30dp"
                android:height="30dp"/>
            <solid android:color="@color/iglou_gray"/>
        </shape>
    </item>
    
    <item 
        android:top="0dp" 
        android:left="@dimen/offset_left"
        android:bottom="0dp" 
        android:right="0dp"
     	>
        <shape android:shape="rectangle">
            <size android:width="30dp"
                android:height="30dp"/>
            <solid android:color="@color/iglou_gray"/>
        </shape>
    </item>
    <item 
        android:top="30dp" 
        android:left="30dp"
        android:bottom="@dimen/frame_offset_bottom" 
        android:right="@dimen/frame_offset_right"
     	>
        <shape android:shape="rectangle">
            <size android:width="30dp"
                android:height="30dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</layer-list>

