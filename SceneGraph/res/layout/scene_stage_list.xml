<?xml version="1.0" encoding="utf-8"?>
<gl.iglou.scenegraph.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background = "@drawable/scene_data_selector">
    
    <Button
        android:id="@+id/scene_expand_button"
        android:layout_width = "40dp"
        android:layout_height = "match_parent"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:background="@android:color/transparent"
        />
    
    
  <CheckedTextView 
	    android:id="@+id/stage_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf = "@+id/scene_expand_button"
	    android:gravity="left|center_vertical"
	    android:duplicateParentState="true"
	    android:textAppearance="?android:attr/textAppearanceListItemSmall"
	    android:drawableLeft="@drawable/scene_scene"
	    android:drawablePadding="15dp"
	    android:textColor="#fff"
	    android:maxEms="15"
	    android:minHeight="?android:attr/listPreferredItemHeightSmall" />
  
  <ImageView
        android:id="@+id/scene_eye_button"
        android:layout_width = "40dp"
        android:layout_height = "?android:attr/listPreferredItemHeightSmall"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:src="@drawable/scene_eye"
        android:scaleType="center"
        android:background="@android:color/transparent"
        />
  
	<View 
	   android:id="@+id/scene_data_divider"
	   android:layout_width="match_parent"
	   android:layout_height="2dp"
	   android:layout_alignParentBottom="true"
	   android:layout_marginLeft="10dp"
	   android:background="@android:color/white" />
    
    

</gl.iglou.scenegraph.CheckableRelativeLayout>


